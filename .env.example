# EstateCore Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Security Keys (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your_super_secret_key_change_in_production_min_32_chars
JWT_SECRET_KEY=your_jwt_secret_key_change_in_production_min_32_chars

# Database Configuration  
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Legacy Docker Configuration (if using Docker)
POSTGRES_DB=estatecore
POSTGRES_USER=estatecore
POSTGRES_PASSWORD=change_me

# CORS Origins (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Optional: OpenALPR API Key (for license plate recognition)
OPENALPR_API_KEY=your_openalpr_api_key_here

# Optional: Admin Seeding
SEED_ADMIN_EMAIL=admin@yourdomain.com
SEED_ADMIN_PASSWORD=change_this_admin_password

# Email Configuration (for automatic invite links)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-from-google
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Application URL (for invite links in emails)
APP_URL=http://localhost:3000
